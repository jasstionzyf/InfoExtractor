		</dependency>
		

		
            
		  <dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>swt</artifactId>
			<version>1.0</version>

			<systemPath>${dependencies.dependency.swt.systemPath}</systemPath>
			<scope>system</scope>

		</dependency>  
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
